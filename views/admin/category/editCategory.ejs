<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('../partials/header') %>
    <title>Admin - Edit Category</title>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <main class="mt-5 pt-3">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <h4>Edit Category</h4>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <form action="/admin/updateCategory/<%= cat[0].cat_id %>" method="post">
              <div class="mb-3">
                <label for="" class="form-label">Category Title</label>
                <input type="text" class="form-control" name="cat_title" placeholder="" value="<%= cat[0].cat_title %>"/>
                

            </div>
            <div class="mb-3">
              <label for="" class="form-label">Category Description</label>
              <textarea name="cat_desc" class="form-control" id="" cols="30" rows="10"><%= cat[0].cat_desc %></textarea>

          </div>
              <button type="submit" class="btn btn-outline-success w-100">Update Category</button>
            </form>
          </div>
        </div>
      </div>
    </main>
    
        <%- include('../partials/footer') %>

  </body>
</html>
