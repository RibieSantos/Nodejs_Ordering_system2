<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('../partials/header') %>
        <title>Admin - Add Menu</title>
</head>

<body>
    <%- include('../partials/nav') %>

        <main class="mt-5 pt-3">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <h4>Add Menu</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <form action="/admin/addMenu/add" method="post" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="" class="form-label">Menu Image</label>
                                <input type="file" class="form-control" name="menu_image" placeholder="" />

                            </div>
                            <div class="mb-3">
                                <label for="" class="form-label">Menu Title</label>
                                <input type="text" class="form-control" name="menu_title" placeholder="" />

                            </div>
                            <div class="mb-3">
                                <label for="" class="form-label">Menu Description</label>
                                <input type="text" class="form-control" name="menu_desc" placeholder="" />

                            </div>
                            <div class="mb-3">
                                <label for="" class="form-label">Menu Price</label>
                                <input type="text" class="form-control" name="menu_price" placeholder="" />

                            </div>
                            <div class="mb-3">
                                <label for="" class="form-label">Menu Category</label>
                                <select class="form-select form-select" name="menu_cat">
                                    <% cat.forEach(cats => { %>
                                     <option value="<%= cats.cat_id %>"><%= cats.cat_title %></option>
                                    <% }) %>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="" class="form-label">Menu Status</label>
                                <select class="form-select form-select" name="menu_status">
                                    <option value="Available">Available</option>
                                    <option value="Not Available">Not Available</option>
                                </select>
                            </div>
                            <input type="submit" value="Add Menu" class="btn btn-outline-success w-100 mb-3">

                        </form>
                    </div>
                </div>
            </div>
        </main>

        <%- include('../partials/footer') %>

</body>

</html>