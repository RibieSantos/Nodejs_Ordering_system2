<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="style.css">
    <%- include('./partials/header') %>
    <title>Customer - Dashboard</title>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="cart-container container">
      <center>
        <h1>Menu</h1>
      </center>
      <div class="row">
        <!-- Product Cards -->
        <% menu.forEach(product => { %>
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="product-card card" data-toggle="modal" data-target="#productModal" data-image="<%= product.menu_image %>" data-title="<%= product.menu_title %>" data-price="<%= product.menu_price %>">
            <img class="card-img-top" src="<%= product.menu_image %>" />
            <div class="card-body">
              <h5 class="card-title"><%= product.menu_title %></h5>
              <p class="card-text">$<%= product.menu_price %></p>
              <button class="btn btn-primary addToCartBtn" 
              data-image="<%= product.menu_image %>" 
              data-title="<%= product.menu_title %>" 
              data-price="<%= product.menu_price %>">
              Add to Cart
            </button>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>

    <!-- Modal to Add to Cart to -->
    <div class="modal fade" id="productModal" tabindex="-1" role="dialog" aria-labelledby="productModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="productModalLabel">Product Details</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <img id="modalProductImage" class="product-image" src="" alt="Product Image" />
            <div id="modalProductTitle" class="product-title"></div>
            <div id="modalProductPrice" class="product-price"></div>
            <label for="quantityInput">Quantity:</label>
            <input type="number" id="quantityInput" class="form-control" placeholder="Enter quantity" />
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary" onclick="addToCart()">Add to Cart</button>
          </div>
        </div>
      </div>
    </div>

    <%- include('./partials/footer') %>
    
    <script>
    // Handle Add to Cart functionality when clicking product cards
$('.addToCartBtn').on('click', function () {
  const image = $(this).data('image');
  const title = $(this).data('title');
  const price = $(this).data('price');

  // Populate modal with selected product details
  $('#modalProductImage').attr('src', image);
  $('#modalProductTitle').text(title);
  $('#modalProductPrice').text('Price: $' + price);
  $('#quantityInput').val('1');

  // Store product details for adding to cart
  $('#addToCartBtn').data('image', image);
  $('#addToCartBtn').data('title', title);
  $('#addToCartBtn').data('price', price);
});

// Handle Add to Cart button inside the modal
function addToCart() {
  const image = $('#modalProductImage').attr('src');
  const title = $('#modalProductTitle').text();
  const price = $('#modalProductPrice').text().replace('Price: $', ''); // Ensure the price is correctly extracted
  const quantity = $('#quantityInput').val(); // Get selected quantity

  // AJAX request to add item to cart
  $.post('/addToCart', {
    menu_image: image,
    menu_title: title,
    menu_price: price,
    quantity: quantity
  })
  .done(function (response) {
    alert(response.message); // Show success message or handle response
    $('#productModal').modal('hide'); // Hide modal after adding to cart
  })
  .fail(function (error) {
    alert('Error adding to cart: ' + error.responseJSON.message); // Show error message
  });
}


    </script>
    

  </body>
</html>