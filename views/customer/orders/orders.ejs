<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('../partials/header') %>
    <title>Orders</title>
    <style>
      body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      .cart-container {
        margin: 80px auto 0;
      }
      .cart-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
      }
      .cart-table th,
      .cart-table td {
        border: 1px solid #ddd;
        padding: 10px;
        text-align: center;
      }
      .product-image {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 5px;
      }
      .update-button,
      .delete-button,
      .checkout-button {
        background-color: #3498db;
        color: #fff;
        padding: 8px 16px;
        border: none;
        cursor: pointer;
        font-size: 14px;
        margin-right: 5px;
      }
      .total-section {
        text-align: right;
        margin-top: 20px;
      }
    </style>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <div class="cart-container container">
    <center>
      <h1>Orders</h1>
    </center>
    <!-- Add the following code to display the orders -->
    <div
      class="table-responsive"
    >
      <table
        class="table data-table"
      >
      <thead>
        <tr>
          <th>Image</th>
          <th>Title</th>
          <th>Quantity</th>
          <th>Total Amount</th>
          <th>Status</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <!-- Loop through the orders and display them -->
        <% orders.forEach(order => { %>
          <tr>
            <td><img src="<%= order.menu_image %>" alt="Product Image" class="product-image" /></td>
            <td><%= order.menu_title %></td>
            <td><%= order.quantity %></td>
            <td>$<%= order.total_price %></td>
              
              <% if (order.order_status == "Pending") { %>
               <td><p class="btn btn-secondary"><%= order.order_status %></p></td>
               <td>
                <button class="btn btn-danger">Delete</button>
              </td>
               <% } else if (order.order_status == "Confirm") { %>
                <td><p class="btn btn-primary"><%= order.order_status %></p></td>
                <td></td>
                <% } else if (order.order_status == "To Process") { %>
                  <td><p class="btn btn-info"><%= order.order_status %></p></td>
                <td></td>

                  <% } else if (order.order_status == "To Be Delivered") { %>
                    <td><p class="btn btn-info"><%= order.order_status %></p></td>
                <td></td>
                    <% } else if (order.order_status == "Paid") { %>
                      <td><p class="btn btn-success"><%= order.order_status %></p></td>
                      <td><a href="" class="btn btn-primary">Received</a></td>
              <% }  %>
            
          </tr>
        <% }); %>
      </tbody>
      </table>
    </div>
  
</div>
    <%- include('../partials/footer') %>
  </body>
</html>

