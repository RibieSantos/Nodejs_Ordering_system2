<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <%- include('../partials/header') %>
  <title>Cart</title>
  
  <style>
    body {
      font-family: 'Arial', sans-serif;
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    .cart-container {
      max-width: 800px;
      margin: 80px auto 0;
    }
    .cart-table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
    }
    .cart-table th,
    .cart-table td {
      border: 1px solid #ddd;
      padding: 10px;
      text-align: center;
    }
    .product-image {
      width: 80px;
      height: 80px;
      object-fit: cover;
      border-radius: 5px;
    }
    .update-button,
    .delete-button,
    .checkout-button {
      background-color: #3498db;
      color: #fff;
      padding: 8px 16px;
      border: none;
      cursor: pointer;
      font-size: 14px;
      margin-right: 5px;
    }
    .total-section {
      text-align: right;
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <%- include('../partials/nav') %>

  <div class="cart-container">
    <center>
      <h1>Cart</h1>
    </center>

    <table class="cart-table">
    <table class="cart-table">
      <thead>
        <tr>
          <th>Image</th>
          <th>Title</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Total Amount</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% cart.forEach(item => { %>
          <tr>
            <td>
              <!-- Assuming you have an image URL for the product -->
              <img src="<%= item.image_url %>" alt="<%= item.product_name %>" class="product-image">
            </td>
            <td><%= item.menu_title %></td>
            <td><%= item.menu_price %></td>
            <td><%= item.quantity %></td>
            <td><%= item.total_price %></td>
            <td>
              <form action="/deleteCartItem/<%= item.cart_id %>" method="post">
                <button type="submit" class="delete-button">Delete</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>

      <div class="total-section">
        <% const totalAmount = cart.reduce((sum, item) => sum + item.total_price, 0) %>
        <p>Total Amount: Php <%= totalAmount.toFixed(2) %></p>
        <!-- Add the following form to submit the cart items for checkout -->
        <form action="/customer/checkout" method="post">
          <% cart.forEach(item => { %>
            <input type="hidden" name="cart[]" value='<%= JSON.stringify(item) %>'>
            <input type="hidden" name="menu_title[]" value='<%= item.menu_title %>'>
            <input type="hidden" name="menu_id[]" value='<%= item.menu_id %>'>
            <input type="hidden" name="menu_price[]" value='<%= item.menu_price %>'>
          <% }); %>
          <button type="submit" class="checkout-button">Checkout</button>
        </form>
        
      </div>
    </div>


  <%- include('../partials/footer') %>
</body>
</html>