<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('../partials/header') %>
    <title>Order_History</title>
    <style>
      body {
        margin-top: 80px;
      }
    </style>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <center>
      <h1>Order_History</h1>
      <table>
        <thead>
          <tr>
            <th>Order ID</th>
            <th>Menu Title</th>
            <th>Quantity</th>
            <th>Total Amount</th>
            <th>Order Date</th>
          </tr>
        </thead>
        <tbody>
          <% orderHistory.forEach(order => { %>
            <tr>
              <td><%= order.ord_id %></td>
              <td><%= order.menu_title %></td>
              <td><%= order.quantity %></td>
              <td><%= order.total_amount %></td>
              <td><%= new Date(order.ord_date).toLocaleString() %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </center>
    <%- include('../partials/footer') %>
  </body>
</html>

